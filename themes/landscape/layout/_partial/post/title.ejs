<% category = post.categories.length > 0 ? post.categories.first().name + '/' : '' %>
<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= category %><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= category %><%= post.title %></a>
  </h1>
<% } %>
